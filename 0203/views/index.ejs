        <h1>동적 파일 업로드</h1>
        <form>
            <input type="file" id="userfile" /><br />
            <input type="text" id="title" /><br />
            <button type="button" onclick="fileUpload()">업로드</button>
        </form>
        <br />
        <br />
        <div class="resultBox"></div>
        <script>
            const resultBox = document.querySelector('.resultBox');
            function fileUpload() {
                const file = document.querySelector('#userfile');
                //파일에 접근하기 위해서 file.files를 사용하고
                //file.files는 배열을 반환하며 우리가 원하는 것은
                //첫번째 요소이기 때문에 file.files[0]를 사용함
                console.log(file.files[0]);

                //FormData:자바스크립트 내장객체이고 폼 데이터를 생성해줌
                const formData = new FormData();
                //append(key, value)
                //파일들은 항상 제일 마지막에 선언
                formData.append('title', document.querySelector('#title').value);
                formData.append('file', file.files[0]);

                axios({
                    method: 'POST',
                    url: '/upload/axios',
                    data: formData,
                    headers: {
                        'Content-Type': 'multipart/form-data',
                    },
                }).then((res) => {
                    console.log('res', res);
                    resultBox.innerHTML = `<p>이름은 ${res.data.title.title}</p><img src=${res.data.file.path}>`;
                });
            }
        </script>
